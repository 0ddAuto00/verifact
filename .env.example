# VeriFact Environment Variables Example
# For a complete list of options, see configs/env.template

# OpenRouter Configuration (Required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model Configuration via OpenRouter (Optional)
DEFAULT_MODEL=openai/gpt-4o
CLAIM_DETECTOR_MODEL=openai/gpt-4o
EVIDENCE_HUNTER_MODEL=anthropic/claude-3-opus
VERDICT_WRITER_MODEL=openai/gpt-4o

# Supabase Configuration (Optional)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here
SUPABASE_DB_URL=postgresql://postgres:postgres@verifact-db:5432/postgres

# API and UI Configuration
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8501
API_HOST=localhost
API_PORT=8000

