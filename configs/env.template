# OpenRouter Configuration (Required)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_SITE_URL=https://verifact.ai
OPENROUTER_SITE_NAME=VeriFact

# Model Configuration via OpenRouter (Optional, defaults provided)
# Model names should be prefixed with provider: openai/gpt-4o, anthropic/claude-3-opus, etc.
DEFAULT_MODEL=openai/gpt-4o
CLAIM_DETECTOR_MODEL=openai/gpt-4o
EVIDENCE_HUNTER_MODEL=anthropic/claude-3-opus
VERDICT_WRITER_MODEL=openai/gpt-4o

# Model Parameters (Optional)
MODEL_TEMPERATURE=0.1
MODEL_MAX_TOKENS=1000
MODEL_REQUEST_TIMEOUT=120

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here
SUPABASE_DB_URL=postgresql://postgres:postgres@localhost:5432/postgres

# Chainlit Configuration
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8501
CHAINLIT_AUTH_SECRET=your_chainlit_auth_secret_here
# Set to true if you want to enable authentication
CHAINLIT_AUTH_ENABLED=false

# API Configuration
API_HOST=localhost
API_PORT=8000

# Logging Configuration (Optional)
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL 