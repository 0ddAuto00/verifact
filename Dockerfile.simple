FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y gcc python3-dev curl build-essential libssl-dev libffi-dev && apt-get clean && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && pip install --no-cache-dir cryptography>=41.0.0

COPY . .

ENV PYTHONPATH=/app
ENV PORT=8000
ENV HOST=0.0.0.0

CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]
